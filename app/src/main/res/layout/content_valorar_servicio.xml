<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.app.alice.activity.VerCitaActivity"
    tools:showIn="@layout/activity_valorar_servicio">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Califique el servicio en cuanto a:"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:paddingBottom="3dp"
                android:textColor="@color/colorAlice"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puntualidad:"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:paddingBottom="3dp"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center_horizontal">
                <Button
                    android:id="@+id/btnEstrellaP1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/est1"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnEstrellaP2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/est1"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnEstrellaP3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/est1"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnEstrellaP4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/est0"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnEstrellaP5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/est0"
                    android:layout_margin="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/area_nombreP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_nombreP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etvaloracionP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:ems="10"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text="Regular"
                        android:focusable="false"
                        android:editable="false"
                        android:enabled="true" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calidad del Servicio:"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:paddingBottom="3dp"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center_horizontal">
                <Button
                    android:id="@+id/btnEstrellaCA1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/est1"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnEstrellaCA2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/est1" />
                <Button
                    android:id="@+id/btnEstrellaCA3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/est1"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnEstrellaCA4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/est0"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnEstrellaCA5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/est0"
                    android:layout_margin="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/area_nombreCA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_nombreCA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etvaloracionCA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:ems="10"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text="Regular"
                        android:focusable="false"
                        android:editable="false"
                        android:enabled="true" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAlice"
                android:paddingBottom="10dp"
                android:textColor="@color/colorAccent"
                android:text="Guardar"/>

        </LinearLayout>

</RelativeLayout>