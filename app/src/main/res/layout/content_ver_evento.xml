<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.app.alice.activity.VerEventoActivity"
    tools:showIn="@layout/activity_ver_evento">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageEvento" />

        <LinearLayout
            android:id="@+id/area_servicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTituloEventoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="titulo"
                android:textStyle="bold"
                android:textColor="@color/colorAlice"
                android:textSize="22dp"
                android:paddingTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_responsable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <WebView
                android:text="contenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:id="@+id/tvContenidoEventoDetalle"
                android:textColor="@color/colorBlackFull"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:text="fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:paddingTop="4dp"
                android:id="@+id/tvFechaEventoDetalle"
                android:textColor="@color/colorBlackFull"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:text="Lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="17dp"
                android:paddingTop="4dp"
                android:id="@+id/tvLugarEventoDetalle"
                android:textColor="@color/colorBlackFull"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:text="tipo evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:id="@+id/tvTipoEventoDetalle"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <!--<LinearLayout
            android:id="@+id/area_lugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:text="tipo servicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingTop="4dp"
                android:textStyle="bold"
                android:id="@+id/tvTipoServicioEventoDetalle"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>-->




    </LinearLayout>

    </ScrollView>

</RelativeLayout>