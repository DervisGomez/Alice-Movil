<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.app.alice.activity.VerHorarioActivity"
    tools:showIn="@layout/activity_ver_horario">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HORARIO"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="16dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp"
            android:background="@color/colorAlice">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:padding="1dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:padding="4dp"
                    android:gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorBlackFull"
                    android:text="Día"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="4dp"
                    android:gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorBlackFull"
                    android:text="Mañana"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="4dp"
                    android:gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorBlackFull"
                    android:text="Tarder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:text="Lunes"/>
                <TextView
                    android:id="@+id/tvLunes1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
                <TextView
                    android:id="@+id/tvLunes2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:text="Martes"/>
                <TextView
                    android:id="@+id/tvMartes1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
                <TextView
                    android:id="@+id/tvMartes2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:text="Miercoles"/>
                <TextView
                    android:id="@+id/tvMiercole1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
                <TextView
                    android:id="@+id/tvMiercole2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:text="Jueves"/>
                <TextView
                    android:id="@+id/tvJueves1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
                <TextView
                    android:id="@+id/tvJueves2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:text="Viernes"/>
                <TextView
                    android:id="@+id/tvViernes1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
                <TextView
                    android:id="@+id/tvViernes2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:text="Sabado"/>
                <TextView
                    android:id="@+id/tvSabado1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
                <TextView
                    android:id="@+id/tvSabado2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:text="Domingo"/>
                <TextView
                    android:id="@+id/tvDomingo1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
                <TextView
                    android:id="@+id/tvDomingo2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="00/00/00"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>