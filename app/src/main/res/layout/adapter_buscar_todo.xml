<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvIconoBusqueda"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circ_prim"
        android:layout_margin="4dp"
        android:text="E"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="32dp"
        />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvTituloBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de la Evento"
            android:textStyle="bold"
            android:minLines="1"
            android:maxLines="1"
            android:textColor="@color/colorAlice"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tvDescripcionBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:minLines="1"
            android:maxLines="2"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:textColor="@color/colorBlackFull"
            android:text="Descripción de de la noticia publicada, Descripción de de la noticia publicada"/>
        <TextView
            android:id="@+id/tvFechaBusqueda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minLines="1"
            android:maxLines="1"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:text="08/01/2017 - 3:00pm"/>
    </LinearLayout>
</LinearLayout>
