<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/est1"
        android:id="@+id/imgEvento"
        android:layout_margin="10dp"
        android:gravity="center_horizontal|center_vertical"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvDescripcionTipoServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion del Tipo Servicio"
            android:textStyle="bold"
            android:minLines="1"
            android:maxLines="1"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorAlice"
            android:textSize="19dp"/>
        <TextView
            android:id="@+id/tvTextoTipoServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:minLines="2"
            android:maxLines="2"
            android:textSize="15dp"
            android:textColor="@color/colorBlackFull"
            android:text="bla, bla"/>
    </LinearLayout>
</LinearLayout>
