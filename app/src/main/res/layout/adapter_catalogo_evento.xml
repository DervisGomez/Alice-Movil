<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/est1"
        android:id="@+id/imgEvento"
        android:layout_margin="9dp"
        android:gravity="center_horizontal|center_vertical"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvTituloEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de la Evento"
            android:textStyle="bold"
            android:minLines="1"
            android:maxLines="1"
            android:textColor="@color/colorAlice"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tvDescripcionEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:minLines="1"
            android:maxLines="2"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:textColor="@color/colorBlackFull"
            android:text="Descripción de de la noticia publicada, Descripción de de la noticia publicada"/>
        <TextView
            android:id="@+id/tvFechaEvento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minLines="1"
            android:maxLines="1"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:text="08/01/2017 - 3:00pm"/>
        <!--<TextView
            android:id="@+id/tvTipoEvento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:text="Tipo: X"/>-->
    </LinearLayout>
</LinearLayout>
