<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/est0"
        android:id="@+id/imgNoticia"
        android:layout_margin="10dp"
        android:gravity="center_horizontal|center_vertical" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvTituloNoticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de la Noticia"
            android:textStyle="bold"
            android:minLines="1"
            android:maxLines="1"
            android:textColor="@color/colorAlice"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tvDescripcionNoticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:minLines="1"
            android:maxLines="2"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:textColor="@color/colorBlackFull"
            android:text="Descripción de de la noticia publicada, Descripción de de la noticia publicada"/>
        <TextView
            android:id="@+id/tvFechaNoticia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:minLines="1"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:text="08/01/2017 - 3:00pm"/>
        <!--<TextView
            android:id="@+id/tvTipoNoticia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:text="Tipo: X"/>-->
    </LinearLayout>
</LinearLayout>
